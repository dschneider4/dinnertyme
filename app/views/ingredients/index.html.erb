<h1>Listing ingredients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Unit</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= ingredient.name %></td>
    <td><%= ingredient.unit %></td>
    <td><%= ingredient.amount %></td>
    <td><%= link_to 'Show', ingredient, :class => 'btn btn-success btn-mini' %></td>
    <td><%= link_to image_tag('icons/wrench_orange.png'), edit_ingredient_path(ingredient) %></td>
    <td><%= link_to image_tag('icons/delete.png'), ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ingredient', new_ingredient_path %>
