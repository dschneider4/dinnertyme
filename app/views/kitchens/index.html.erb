<h1>Listing kitchens</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @kitchens.each do |kitchen| %>
  <tr>
    <td><%= kitchen.name %></td>
    <td><%= link_to 'Show', kitchen, :class => 'btn btn-success btn-mini' %></td>
    <td><%= link_to image_tag('icons/wrench_orange.png'), edit_kitchen_path(kitchen) %></td>
    <td><%= link_to image_tag('icons/delete.png'), kitchen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

